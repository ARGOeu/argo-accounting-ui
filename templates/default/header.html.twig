<header class="p-1 px-md-2 mb-3 bg-white border-bottom shadow-sm">



    <div id="top-header" class="uk-visible@m">
    <div class="uk-container">
        <div class="uk-grid">
            <div class="uk-width-1-5@m uk-text-right"></div>
            <div class="uk-width-4-5@m uk-text-right">
                <div class="region region-header-right">
                    <div id="block-system-user-menu" class="block block-system block-border block-menu">
                        <div class="content">
                            <ul id="globalmenu" class="uk-nav uk-navbar-nav uk-navbar-right uk-float-right">
                                <li class="first leaf"><a href="https://eosc-portal.eu">Portal Home</a></li>
                                <li class="leaf"><a href="https://argoeu.github.io/argo-accounting">Documentation</a>
                                </li>
                                <li class="leaf"><a href="https://acc.devel.argo.grnet.gr/swagger-ui/">EOSC
                                        Accounting API</a></li>
                                <li class="leaf">
                                    <a class="active" href="/">Accounting UI</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>


    <nav class="navbar navbar-expand-lg" style="background-color: rgb(255, 255, 255);">
        <div class="container-fluid row" >
            <div class="col-6">
                <a class="navbar-brand" href="/">
                        <img alt="logo" class="offset-2 m-4" src="{{ asset('build/images/logo_eosc.png') }}" height="100px"/>
                </a>
            </div>

            <div class="col-6 text-end">


                    {% if maintenance_mode != 'false' %}
                        <a class="text-white" href="{{ maintenance_url }}">
                            <span class="badge bg-danger  m-1 h-4"><i
                                        class="fas fa-bolt  text-white mr-1"></i> {{ maintenance_description }}</span></a>
                    {% endif %}



                <div class="uk-navbar-right align-self-center">
                <ul id="mainTab" class="uk-navbar-nav nav nav-tabs ">
                    {% set current_path = app.request.get('_route') %}
                    <li class="nav-item">
                        <a href="{{ path('projects') }}" class="nav-link  {% if current_path == 'projects' %}  active {% endif %}">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('providers') }}" class="nav-link {% if current_path == 'providers' %}  active {% endif %}" >Providers</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('installations') }}" class="nav-link {% if current_path == 'installations' %}  active {% endif %}" >Installations</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('metrics-definitions') }}" class="nav-link {% if current_path == 'metrics-definitions' %}  active {% endif %}" >Metrics Definitions</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('metrics-units') }}" class="nav-link {% if current_path == 'metrics-units' %}  active {% endif %}" >Metrics Units</a>
                    </li>

                    <li class="nav-item">
                        <a href="{{ path('metrics-types') }}" class="nav-link {% if current_path == 'metrics-types' %}  active {% endif %}">Metrics Type</a>
                    </li>

                    <li class="nav-item">
                        <a href="{{ path('metrics') }}" class="nav-link {% if current_path == 'metrics' %}  active {% endif %}">Metrics</a>
                    </li>
                </ul>
                </div>



            </div>




            <div class="col-3 text-end navbar-nav">


            </div>

        </div>
    </nav>


</header>