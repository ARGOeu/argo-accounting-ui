        <div class="row">

            <form class="form_browse_metrics" method="POST" action="metrics#metrics">
                <input name="form" value="1" type="hidden"/>
                <H3>Select a projet to browse associated metrics</H3>
                <div class="form-group m-2">
                    <label for="projectName">Project</label>

                    <select class="select2-enable form-control" name="projectName">

                        {% if ( project==0 or project=='-- Project --') %}
                        <option value="0" selected>{{ project }}</option>
                        {% endif %}
                        {%  for project in tabProjects %}
                            {% if project.project_id==project %}
                                {% set projectName= project.title  %}
                            <option value="{{project.project_id}}" selected>{{ project.title }}</option>
                            {% else %}
                                <option value="{{project.project_id}}">{{ project.title }}</option>
                            {% endif %}

                        {% endfor %}
                    </select>
                </div>

