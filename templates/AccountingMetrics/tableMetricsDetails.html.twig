{% extends 'base.html.twig' %}

{% block stylesheets %}

{% endblock %}

{% block body %}

    {% if message is defined and message!='' %}
        <div class="card m-1 col-4 mb-2" id="message">
            <div class="card-header {% if status < 210 %} bg-success{% else %} bg-danger {% endif %}">
                {% if status < 210 %}
                    <h3 class="card-title text-white "><i class="bi bi-check-circle m-1"></i> Update done</h3>
                {% else %}
                    <h3 class="card-title text-white "><i class="bi bi-exclamation-triangle m-1"></i>Update failed</h3>
                {% endif %}
            </div>
            <div class="card-body">
                <h4>Status {{ status }} - {{ message }}</h4>
            </div>
        </div>
        <hr/>
    {% endif %}

    <div class="card mt-2">

        <div class="card-header">
            <h3 class="card-title"><i class="bi bi-bar-chart"></i> Metrics Table
                <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add_metric"
                   title="Add a metric to the project">
                    <i class="bi bi-plus-circle m-1" style="font-size: large"></i>
                    <i class="bi bi-bar-chart m-1" style="font-size: large"></i> Add Metric
                </a>
            </h3>


            {% set ProjectName='' %}
            {% set ProviderName='' %}
            {% set ProjectId='' %}
            {% set Provider='' %}
            {% set InstallationName='' %}

            {% for permission in permissions['content'] %}
                {% if  permission.id == parameters.project_id %}
                    {% set ProjectName=permission.acronym %}
                    {% set ProjectId=parameters.project_id  %}
                {% endif %}

                {% if (parameters.type=='providers') %}
                    {% for provider in permission['providers'] %}
                        {% if  provider.id == parameters.id %}
                            {% set Provider=provider.id %}
                            {% set ProviderName=provider.name %}

                        {% endif %}
                    {% endfor %}
                {% endif %}

            {% endfor %}

            {% if (parameters.type=='installations') %}
                {% for installations in tabInstallations %}
                    {% for installation in installations %}
                        {% if installation.id == parameters.id %}
                            {% set ProjectName=parameters.project_id %}
                            {% set ProviderName=installation.organisation %}
                            {% set InstallationName=installation.installation %}
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            {% endif %}

            <div class="modal fade" id="add_metric" tabindex="-1">
                <div class="modal-dialog modal-dialog-scrollable">
                    <div class="modal-content">

                        <div class="modal-header  bg-light">
                            <h5 class="modal-title text-center">Add a new Metric </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form class="form_add_metric" id="form_add_metric">

                                <h3>Infrastructure</h3>
                                <div class="form-group m-2">
                                    <label for="project">Project</label>
                                    <input type="text" class="form-control" name="project" value="{{ ProjectName }}"     disabled/>
                                </div>


                                {% if (parameters.type=='projects') %}

                                    <input name="type" type="hidden" value="project"/>
                                    <div class="form-group m-2">
                                        <label for="project">Provider</label>
                                        <select class="form-select" name="providers">
                                            <option value="0">--Select a provider--</option>
                                            {% for permission in permissions['content'] %}
                                                {% if permission.id == parameters.project_id %}
                                                    {% for provider in permission['providers'] %}
                                                        <option value="{{ provider.id }}_{{ permission.id }}">{{ provider.name }}</option>
                                                    {% endfor %}
                                                {% endif %}

                                            {% endfor %}
                                        </select>
                                    </div>


                                    {% for permission in permissions['content'] %}
                                        {% if permission.id == parameters.project_id %}
                                            {% for provider in permission['providers'] %}
                                            <div class="form-group m-2 d-none installations" id="installations_{{ provider.id }}_{{ permission.id }}">
                                                <label for="Installations">Installation</label>
                                                <select  class="form-select" name="installation" >
                                                    {%  for installations in tabInstallations %}
                                                        {% for installation in installations %}
                                                            {% if installation.project==permission.id  and installation.organisation==provider.id %}
                                                                <option type="text" class="form-control" value="{{ installation.id }}" >{{ installation.installation}}</option>
                                                            {% endif %}
                                                        {%endfor %}
                                                    {%endfor %}
                                                </select>
                                            </div>
                                            {% endfor %}
                                        {% endif %}
                                    {% endfor %}

                                {% endif %}


                                {% if (parameters.type=='providers') %}

                                    <input name="type" type="hidden" value="providers"/>
                                    <div class="form-group m-2">
                                        <label for="project">Provider</label>
                                        <input type="text" class="form-control" name="provider"
                                               value="{{ ProviderName }}" disabled/>
                                    </div>

                                    <div class="form-group m-2">
                                        <label for="project">Installation</label>
                                        <select type="text" class="form-select" name="installation" >
                                            {%  for installations in tabInstallations %}
                                                {% for installation in installations %}

                                                    {% if installation.project==ProjectId and installation.organisation==Provider %}
                                                    <option type="text" class="form-control" value="{{ installation.id }}" >{{ installation.installation}}</option>
                                                    {% endif %}

                                                {%endfor %}
                                            {%endfor %}
                                        </select>
                                    </div>

                                {% endif %}

                                {% if (parameters.type=='installations') %}
                                    <input name="type" type="hidden" value="installations"/>

                                    <div class="form-group m-2">
                                        <label for="project">Provider</label>
                                        <input type="text" class="form-control" name="provider"
                                               value="{{ ProviderName }}" disabled/>
                                    </div>

                                    <div class="form-group m-2">
                                        <label for="project">Installation</label>
                                        <input type="text" class="form-control" name="installation"
                                               value="{{ InstallationName }}" disabled/>
                                    </div>
                                {% endif %}

                                <hr/>
                                <h3>Metric</h3>


                                <div class="form-group m-2">
                                    <label for="time_period_start">Period</label>
                                    <input type="text" class="form-control" name="period">
                                </div>


                                <div class="form-group m-2">


                                    <label for="time_period_start">Metric definition</label>
                                    <select name="metric_definition" class="form-select">
                                        {% for definitions in tabMetricsDef %}
                                            {% for definition in definitions %}
                                                <option type="text" class="form-control"   value="{{ definition.metric_definition_id }}">{{ definition.metric_name }} : {{ definition.unit_type }} - {{ definition.metric_type }}   </option>
                                            {% endfor %}
                                        {% endfor %}
                                    </select>
                                </div>


                                <div class="form-group m-2">
                                    <label for="value">Value</label>
                                    <input type="text" class="form-control" name="value">

                                </div>


                                <button type="submit" class="btn btn-primary">Submit</button>

                                <div class="ms-2 d-none spinner-border text-primary" id="loader_add" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>


                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="card-body">
            {% set count_pro=0 %}
            {% set count_ins=0 %}


            <div class="btn-group" role="group">
                <button type="button" class="btn btn-light border-secondary"><i class="bi bi-gear"></i></button>
                <button type="button" class="btn btn-light border-secondary "><span
                            class="fw-bold">Project : </span> {{ ProjectName }}</button>
                {% if ProviderName!='' %}
                    <button type="button" class="btn btn-light border-secondary "><span
                                class="fw-bold">Provider : </span> {{ ProviderName }}</button>
                {% endif %}
                {% if InstallationName!='' %}
                    <button type="button" class="btn btn-light border-secondary "><span
                                class="fw-bold">Installation : </span> Installation : {{ InstallationName }}</button>
                {% endif %}
            </div>
            <hr/>


            {% if tabMetricsDetails|length > 0 %}

                <table class="dataTable table  border border-dark" id="TableMetricsDetails">

                    <thead>
                    <tr>

                        <th>Start</th>
                        <th>End</th>

                        <th>Project</th>
                        <th>Provider</th>
                        <th>Installation</th>
                        <th>Value</th>
                        <th>Unit Type</th>
                        <th>Metric Type</th>


                    </tr>
                    </thead>

                    <tbody>

                    {% for tabMetricsDetail in tabMetricsDetails %}
                        {% for data in tabMetricsDetail %}



                            <tr>


                                {% if data.time_period_start is defined %}
                                    <td class="start">{{ data.time_period_start }} </td>
                                {% else %}
                                    <td></td>
                                {% endif %}

                                {% if data.time_period_end  is defined %}
                                    <td class="end">{{ data.time_period_end }} </td>
                                {% else %}
                                    <td></td>
                                {% endif %}


                                <td>{{ data.project }}</td>
                                <td class="provider">{{ data.provider }}</td>

                                {% set installationName='N.A' %}
                                {% for installations in tabInstallations %}
                                    {% for installation in installations %}
                                        {% if installation.id == data.installation_id %}
                                            {% set installationName=installation.installation %}
                                        {% endif %}
                                    {% endfor %}
                                {% endfor %}

                                <td>{{ installationName }}</td>

                                {% if data.value  is defined %}
                                    <td class="value">{{ data.value }} </td>
                                {% else %}
                                    <td></td>
                                {% endif %}


                                <td>{{ data.metric_definition.unit_type }}</td>
                                <td>{{ data.metric_definition.metric_type }}</td>


                            </tr>
                        {% endfor %}
                    {% endfor %}

                    </tbody>

                </table>


            {% else %}
                <div class="mt-4 p-2"><span
                            class="alert alert-info">No metrics registered for this configuration</span>
                </div>
            {% endif %}
        </div>

    </div>




{% endblock %}

{% block javascripts %}
    <script>
        $("#TableMetricsDetails").dataTable({
            "order": [[0, 'desc']]
        })

        $(function () {
            $('input[name="period"]').daterangepicker({
                timePicker: true,
                startDate: moment().startOf('hour').add(-48, 'hour'),
                endDate: moment().startOf('hour').add(-24, 'hour'),
                locale: {
                    format: 'YYYY-MM-DD HH:mm:ss'
                }
            });
        });

        $(document).on('change', "select[name='providers']", function (event) {

            var providerId = $("select[name='providers'] > option:selected").val().trim();

           $("div.installations").addClass('d-none');
            $('div#installations_'  + providerId).removeClass('d-none');

        });

        $(document).on('submit','.form_add_metric',function(event) {
            event.preventDefault(); // cancel default behavior

            let type=  $(this).find('input[name="type"]').val().trim();
            let period=  $(this).find('input[name="period"]').val().trim();
            let metric_definition_id= $("select[name='metric_definition'] > option:selected").val().trim();
            let value=  $(this).find('input[name="value"]').val().trim();


            let installation_id="";



            if (type==='installations') {
                installation_id = $(this).find('input[name="installation"]').val().trim();
            } else {
             installation_id=$("select[name='installation'] > option:selected").val().trim();
            }

            var start=period.split(' - ')[0].replace(' ','T');
            var end=period.split(' - ')[1].replace(' ','T');

            var time_period_start=start+'Z';
            var time_period_end=end+'Z';

            let url = "{{ url('add_one_metric') }}";


            var dataUrl='installation_id='+installation_id+'&metric_definition_id='+metric_definition_id+'&time_period_start='+time_period_start+'&time_period_end='+time_period_end+'&value='+value;

            let request = $.ajax({
                type: "POST",
                url: url,
                data: dataUrl,
                crossDomain: true,

                beforeSend: function () {
                    $('#loader_add').removeClass('d-none');
                }});

            request.done(function (output_json) {

                var output = jQuery.parseJSON(output_json);
                var status = output.code;
                var message = output.message;

                $('#loader_add').addClass('d-none');


                $.redirect(window.location.href, {'status': status, 'message': message});


            });
            request.fail(function (output_json) {

                var output = jQuery.parseJSON(output_json);
                var status = output.code;
                var message = output.message;

                $.redirect(window.location.href, {'status': status, 'message': message});

            });


        });



    </script>
{% endblock %}