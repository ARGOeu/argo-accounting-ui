<h1><i class="bi bi-globe"></i> Projects Table</h1>
<hr/>


<table class="dataTable table  border border-dark" id="TableProjects">

    <thead>
    <tr>
        <th>Project Id</th>
        <th>Acronym</th>
        <th>Title</th>
        <th>Providers</th>
    </tr>
    </thead>

    <tbody>

    {%  for id, data in tabProjects %}
        <tr>
            <td class="id">
                <form class="form_browse" method="POST" action="metrics#metrics">
                    <input name="form" value="1" type="hidden"/>

                    <input type="hidden" name="providerName" value="undef"/>
                    <input  type="hidden" name="projectName" value="{{ data.acronym }}"/>
                    <input  type="hidden" name="projectId" value="{{ data.project_id }}"/>
                    <input type="submit" class="btn btn-primary" value="Metrics for project">

                </form>
            </td>
            <td class="acronym">{{ data.acronym }} </td>
            <td class="title">{{ data.title }} </td>
            <td class="providers">
            {% for provider in data  %}
                {%  if provider.name is defined %}
                {{ provider.name }} -
                {% endif %}
            {% endfor %}
            </td>
        </tr>

    {% endfor %}

    </tbody>

</table>
